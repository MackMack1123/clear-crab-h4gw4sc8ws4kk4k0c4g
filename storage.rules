rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      allow read, write: if false;
    }
    
    // User logos: Public read, Owner write
    match /logos/{userId}/{document=**} {
        allow read: if true;
        allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Content images (hero, text_image blocks): Public read, Owner write
    match /content/{userId}/{document=**} {
        allow read: if true;
        allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
