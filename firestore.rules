rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Helper function to check if user is owner
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Users: Users can read/write their own profile. Admins can read all.
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId) || isAdmin();
    }

    // Campaigns: Public read. Owners can write. Admins can write.
    match /campaigns/{campaignId} {
      allow read: if true;
      allow write: if request.auth != null && (resource == null || resource.data.organizerId == request.auth.uid || isAdmin());
    }

    // Transactions: Admins can read all.
    match /transactions/{transactionId} {
      allow read: if isAdmin();
      allow create: if true; // Allow public creation (donations)
    }

    // Sellers: Public read (for campaign page). Auth users can write (for roster upload).
    match /sellers/{sellerId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Sponsorship Packages: Public read. Organizer can write.
    match /sponsorship_packages/{packageId} {
      allow read: if true;
      allow write: if request.auth != null && (resource == null || resource.data.organizerId == request.auth.uid || isAdmin());
    }

    // Sponsorships: Public create (purchases). Organizer/Admin can read/update.
    match /sponsorships/{sponsorshipId} {
      allow create: if true;
      allow read, update: if request.auth != null && (resource.data.organizerId == request.auth.uid || isAdmin());
    }
    
    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
